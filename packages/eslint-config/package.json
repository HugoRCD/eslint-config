{
  "name": "@hrcd/eslint-config",
  "version": "3.0.0",
  "description": "My personal eslint config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/eslint-config.git",
    "directory": "packages/eslint-config"
  },
  "funding": "https://github.com/sponsors/HugoRCD",
  "author": "HugoRCD",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "automd": "automd",
    "build": "unbuild",
    "dev": "unbuild && eslint .",
    "lint": "eslint .",
    "lint:fix": "eslint . --cache --fix",
    "release": "bun run build && npm publish",
    "release:edge": "bun run build && npm publish --tag edge",
    "typecheck": "tsc --noEmit",
    "test": "bun run build && bun run lint && bun run typecheck"
  },
  "dependencies": {
    "@eslint/js": "^9.23.0",
    "@nuxt/eslint-plugin": "^0.7.6",
    "@rushstack/eslint-patch": "^1.11.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "defu": "^6.1.4",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-import-x": "^4.10.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-package-json": "^0.29.0",
    "eslint-plugin-vue": "^9.33.0",
    "jsonc-eslint-parser": "^2.4.0",
    "tslib": "^2.8.1",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.8",
    "@types/eslint": "^9.6.1",
    "automd": "^0.4.0",
    "bun-plugin-dts": "^0.3.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0"
  },
  "peerDependencies": {
    "eslint": "^9.23.0"
  }
}
