{
  "name": "@hrcd/eslint-config",
  "version": "2.1.1-edge",
  "description": "My personal eslint config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/eslint-config.git",
    "directory": "packages/eslint-config"
  },
  "funding": "https://github.com/sponsors/HugoRCD",
  "author": "HugoRCD",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "automd": "automd",
    "build": "unbuild",
    "dev": "unbuild && eslint .",
    "lint": "eslint .",
    "lint:fix": "eslint . --cache --fix",
    "release": "bun run build && npm publis",
    "release:edge": "bun run build && npm publish --tag edge",
    "typecheck": "tsc --noEmit",
    "test": "bun run build && bun run lint && bun run typecheck"
  },
  "dependencies": {
    "@eslint/js": "^9.12.0",
    "@nuxt/eslint-plugin": "^0.5.7",
    "@rushstack/eslint-patch": "^1.10.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "defu": "^6.1.4",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-import-x": "^4.3.1",
    "eslint-plugin-jsdoc": "^50.3.1",
    "eslint-plugin-package-json": "^0.15.3",
    "eslint-plugin-vue": "^9.28.0",
    "jsonc-eslint-parser": "^2.4.0",
    "tslib": "^2.7.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.11",
    "@types/eslint": "^9.6.1",
    "automd": "^0.3.12",
    "bun-plugin-dts": "^0.3.0",
    "changelogen": "^0.5.7",
    "eslint": "^9.12.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.12.0"
  },
  "packageManager": "bun@1.0.30"
}
